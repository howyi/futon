{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Lambda resource stack creation using Amplify CLI",
	"Parameters": {
		"env": {
			"Type": "String"
		},
		"apifutonGraphQLAPIIdOutput": {
			"Type": "String",
			"Default": "apifutonGraphQLAPIIdOutput"
		}
	},
	"Conditions": {
		"ShouldNotCreateEnvResources": {
			"Fn::Equals": [
				{
					"Ref": "env"
				},
				"NONE"
			]
		}
	},
	"Resources": {
		"LambdaFunction": {
			"Type": "AWS::Lambda::Function",
			"Metadata": {
				"aws:asset:path": "./src",
				"aws:asset:property": "Code"
			},
			"Properties": {
				"Handler": "index.handler",
				"FunctionName": {
					"Fn::If": [
						"ShouldNotCreateEnvResources",
						"slackAuthorize",
						{
							"Fn::Join": [
								"",
								[
									"slackAuthorize",
									"-",
									{
										"Ref": "env"
									}
								]
							]
						}
					]
				},
				"Environment": {
					"Variables": {
						"ENV": {
							"Ref": "env"
						},
						"REGION": {
							"Ref": "AWS::Region"
						},
						"API_FUTON_GRAPHQLAPIIDOUTPUT": {
							"Ref": "apifutonGraphQLAPIIdOutput"
						}
					}
				},
				"Role": {
					"Fn::GetAtt": [
						"LambdaExecutionRole",
						"Arn"
					]
				},
				"Runtime": "nodejs8.10",
				"Timeout": "25",
				"Code": {
					"S3Bucket": "futon-ft-20190618204653-deployment",
					"S3Key": "amplify-builds/slackAuthorize-1561371768-latest-build.zip"
				}
			}
		},
		"LambdaExecutionRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"RoleName": {
					"Fn::If": [
						"ShouldNotCreateEnvResources",
						"futonLambdaRoled6b44e17",
						{
							"Fn::Join": [
								"",
								[
									"futonLambdaRoled6b44e17",
									"-",
									{
										"Ref": "env"
									}
								]
							]
						}
					]
				},
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": [
									"lambda.amazonaws.com"
								]
							},
							"Action": [
								"sts:AssumeRole"
							]
						}
					]
				}
			}
		},
		"lambdaexecutionpolicy": {
			"DependsOn": [
				"LambdaExecutionRole"
			],
			"Type": "AWS::IAM::Policy",
			"Properties": {
				"PolicyName": "lambda-execution-policy",
				"Roles": [
					{
						"Ref": "LambdaExecutionRole"
					}
				],
				"PolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Action": [
								"logs:CreateLogGroup",
								"logs:CreateLogStream",
								"logs:PutLogEvents"
							],
							"Resource": {
								"Fn::Sub": [
									"arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*",
									{
										"region": {
											"Ref": "AWS::Region"
										},
										"account": {
											"Ref": "AWS::AccountId"
										},
										"lambda": {
											"Ref": "LambdaFunction"
										}
									}
								]
							}
						},
						{
							"Effect": "Allow",
							"Action": [
								"sts:AssumeRole",
								"ssm:GetParameter",
								"ssm:GetParameters"
							],
							"Resource": [
								{
									"Fn::Sub": "arn:aws:ssm:${AWS::Region}:${AWS::AccountId}:parameter/FutonSlackClientId"
								},
								{
									"Fn::Sub": "arn:aws:ssm:${AWS::Region}:${AWS::AccountId}:parameter/FutonSlackClientSecret"
								}
							]
						},
						{
							"Effect": "Allow",
							"Action": [
								"dynamodb:PutItem",
								"dynamodb:GetItem",
								"dynamodb:UpdateItem"
							],
							"Resource": [
								{
									"Fn::Sub": [
										"arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/${tablename}",
										{
											"tablename": {
												"Fn::If": [
													"ShouldNotCreateEnvResources",
													{
														"Fn::Join": [
															"-",
															[
																"Workspace",
																{
																	"Ref": "apifutonGraphQLAPIIdOutput"
																}
															]
														]
													},
													{
														"Fn::Join": [
															"-",
															[
																"Workspace",
																{
																	"Ref": "apifutonGraphQLAPIIdOutput"
																},
																{
																	"Ref": "env"
																}
															]
														]
													}
												]
											}
										}
									]
								}
							]
						}
					]
				}
			}
		},
		"futonSlackClientId": {
			"Type": "AWS::SSM::Parameter",
			"Properties": {
				"Name": "FutonSlackClientId",
				"Type": "String",
				"Value": "defaultClientId",
				"Description": "Slack Client ID"
			}
		},
		"futonSlackClientSecret": {
			"Type": "AWS::SSM::Parameter",
			"Properties": {
				"Name": "FutonSlackClientSecret",
				"Type": "String",
				"Value": "defaultClientSecret",
				"Description": "Slack Client Secret"
			}
		}
	},
	"Outputs": {
		"Name": {
			"Value": {
				"Ref": "LambdaFunction"
			}
		},
		"Arn": {
			"Value": {
				"Fn::GetAtt": [
					"LambdaFunction",
					"Arn"
				]
			}
		},
		"Region": {
			"Value": {
				"Ref": "AWS::Region"
			}
		}
	}
}